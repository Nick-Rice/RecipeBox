.main_content
	#recipe_top.row
		.col-md-4
			= image_tag(@recipe.image, size: '400x400')
		.col-md-8
			#recipe_info
				%h1= @recipe.title
				%p.description= @recipe.description
				%p
					Submitted by
					= @recipe.user.email
				  
	.row
		.col-md-6
			#ingredients
				%h2 Ingredients
				%ul
					- @recipe.ingredients.each do |ingredient|
						%li= ingredient.name
							
		.col-md-6
			#directions
				%h2 Directions
				%ol
					- @recipe.directions.each do |direction|
						%li= direction.step
							
	.row
		= link_to "Back", root_path, class: "btn button-default"
		
		- if user_signed_in?
			= link_to "Edit", edit_recipe_path, class: "btn button-default"
			= link_to "Destroy", recipe_path, method: :delete, data: {confirm: "Are you sure?"}, class: "btn button-default"

